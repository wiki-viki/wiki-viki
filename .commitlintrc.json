{
  "extends": ["@commitlint/config-conventional"],
  "parserPreset": {
    "parserOpts": {
      "headerPattern": "^(?<type>.+):\\s(?<subject>.+)$",
      "headerCorrespondence": ["type", "subject"]
    }
  },
  "rules": {
    "subject-empty": [2, "never"],
    "subject-full-stop": [2, "never", "."],
    "type-case": [0],
    "subject-case": [0],
    "type-empty": [2, "never"],
    "type-enum": [
      2,
      "always",
      [
        "🎉 Init",
        "✨ Feat",
        "📦️ Chore",
        "💄 Design",
        "🚑️ Fix",
        "✅ Test",
        "🚀 Deploy",
        "🔨 Refactor",
        "🚚 Rename",
        "📚 Docs",
        "🔥 Remove"
      ]
    ]
  }
}
